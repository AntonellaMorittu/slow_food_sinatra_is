  </div>
</div>
<% @menus.each do |menu| %>
<div id="menu" align="center">
  <h3><%= menu.name %>:</h3>
  <% menu.products.each do |product| %>
    <h4><%= product.name %></h4>
    <p><%= product.price %> Kr </p>
    <form action="/order_create" method="post">
            <input type="hidden" name="product_id" value="<%= product.id %>">
            <a href="/cart.rb"><input type="submit" value="Add to plate"></a>
          </form>
</header>
  <% end %>
<% end %>
